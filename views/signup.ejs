<!DOCTYPE html>
<html lang="en">

<%- include("./shared/head.ejs", {title : "Signup" }) %>

    <body>
        <%- include('./shared/navbar.ejs') %>

    <!--Signup Page-->

    <div class="container form-container">
        <form action="/signup" method="POST" id="form" class="form">
            <h2>Register</h2>
            <div class="form-controller">
                <label for="name" id="inputname">Name</label>
                <input type="text" id="H_Name" name="H_name" placeholder="Your Name" required>
            </div>
            <div class="form-controller">
                <label for="username" id="inputusername">Username</label>
                <input type="text" id="username" name="username" placeholder="Your Username" required>
            </div>
            <div class="form-controller">
                <label for="password" id="inputpassword">Password</label>
                <input type="password" id="password" name="password" placeholder="Your Password" required>
            </div>  
            <div class="form-controller">
                <label for="password2" id="inputpassword2">Confirm Password</label>
                <input type="password" id="password2" name="password2" placeholder="Your Password again" required>
            </div>        
            <div class="form-controller">
                <p class="result" id="result"></p>
            </div>
            <button id="btn" type="submit">Submit</button>
        </form>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
</body>
</html>