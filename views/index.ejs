    <div class="container contact" id="contact">
        <h2 class="form-heading"><span class="color">L</span>et's Connect</h2>
        <form id="form" class="form" name="contact" method="POST">
            <div class="form-controller">
                <label class="form-label" for="name" id="form-label-name"><span class="color">N</span>ame</label>
                <input class="form-input" type="text" id="name" placeholder="Enter Name">
                <small>Error Message</small>
            </div>
            <div class="form-controller">
                <label class="form-label" for="email" id="form-label-email"><span class="color">E</span>mail</label>
                <input class="form-input" type="text" id="email" placeholder="Enter Email">
                <small>Error Message</small>
            </div>
            <div class="form-controller">
                <label class="form-label" for="message" id="form-label-message"><span class="color">Y</span>our Message</label>
                <!-- <textarea name="message" id="message" cols="30" rows="5" placeholder="Enter Your Message"></textarea> -->
                <input class="form-input" type="text" id="message" placeholder="Enter Your Message">
                <small>Error Message</small>
            </div>
            <button type="submit">Submit</button>
        </form>
    </div>


